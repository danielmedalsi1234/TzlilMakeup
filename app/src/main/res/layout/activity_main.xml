<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/mackeup_backgroung"
    tools:context="tzlillmakeup.com.example.danielmedalsi1234.tzlilmakeup.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tzlill MakeUp"
        android:textSize="60px"
        android:textStyle="italic"
        android:textColor="@color/colorAccent"
        android:layout_gravity="center" />
    <Button
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="הצעות מחיר"
        android:id="@+id/btn_prices"
        android:textSize="37px"
        android:textStyle="bold"
        android:layout_marginTop="160dp"
        android:scrollbarStyle="insideInset"
        style="?android:attr/buttonStyleInset"
        android:onClick="onClickPrices"
      />
    <Button
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="רשימה"
        android:id="@+id/btn_sendDetails"
        android:textSize="37px"
        android:textStyle="bold"
        style="?android:attr/buttonStyleInset"
        android:onClick="onClickList"/>

    <Button
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="כניסת מנהל"
        android:id="@+id/btn_login_manager"
        android:textSize="37px"
        android:textStyle="bold"
        android:scrollbarStyle="insideInset"
        style="?android:attr/buttonStyleInset"
        android:onClick="onClickPrices"

        />

</LinearLayout>
