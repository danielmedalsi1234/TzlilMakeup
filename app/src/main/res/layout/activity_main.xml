<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/mackeup_backgroung"
    tools:context="tzlillmakeup.com.example.danielmedalsi1234.tzlilmakeup.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tzlill MakeUp"
        android:textSize="60px"
        android:textStyle="italic"
        android:textColor="@color/colorAccent"
        android:layout_gravity="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:gravity="bottom"
        android:orientation="vertical"
        >
    <Button
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="קבל הצעת מחיר"
        android:id="@+id/btn_prices"
        android:textSize="37px"
        android:textStyle="bold"
        android:scrollbarStyle="insideInset"
        style="?android:attr/buttonStyleInset"
      />
    <Button
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="רשימה"
        android:id="@+id/btn_list"
        android:textSize="37px"
        android:textStyle="bold"
        style="?android:attr/buttonStyleInset"/>
        <Button
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:text="ייעוץ אונליין"
            android:id="@+id/btn_login_chat"
            android:textSize="37px"
            android:textStyle="bold"
            android:scrollbarStyle="insideInset"
            style="?android:attr/buttonStyleInset"
            />
        <Button
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:text="צור קשר"
            android:id="@+id/btn_send_email"
            android:textSize="37px"
            android:textStyle="bold"
            android:scrollbarStyle="insideInset"
            style="?android:attr/buttonStyleInset"
            />
    <Button
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="כניסת מנהל"
        android:id="@+id/btn_login_manager"
        android:textSize="37px"
        android:textStyle="bold"
        android:scrollbarStyle="insideInset"
        style="?android:attr/buttonStyleInset"
        />


    </LinearLayout>

</LinearLayout>
